<?xml version="1.0" encoding="utf-8"?>
<s:ToggleButton xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark"
				skinClass="org.maths.FB.skins.ToggleCellSkin"
				>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
		<fx:int id="row">0</fx:int>
		<fx:int id="col">0</fx:int>
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import org.maths.FB.skins.ToggleCellSkin;
			public function showGremlin(b:Boolean):void
			{
				if(skin == null) return;
				(skin as ToggleCellSkin).gremlin.visible = b;
			}
		]]>
	</fx:Script>
	
</s:ToggleButton>
