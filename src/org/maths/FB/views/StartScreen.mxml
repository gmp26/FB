<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:components="org.maths.FB.components.*" 
		>
	<fx:Script>
		<![CDATA[
			import flash.net.navigateToURL;
			import org.maths.FB.components.NRICHButton;
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>	

	<s:titleContent>
		<s:Image source="@Embed(source='assets/icon.png')"/>
		<s:Group width="20"/>
		<s:Label text="Factor Basher" textAlign="center" fontSize="40"/>
	</s:titleContent>
	
	<s:VGroup width="250" horizontalCenter="0" verticalCenter="-40">
		<s:Button id="introButton" width="100%" label="Intro" fontSize="60" chromeColor="#0359A9" />
		<s:Button id="playButton" width="100%" label="Play" fontSize="60" chromeColor="#8A03B6" />
	</s:VGroup>
	
	<s:Button width="100%" bottom="0" icon="{NRICHButton}" click="navigateToURL(new URLRequest('http://nrich.maths.org/mobile'))"/>

	
	
</s:View>
