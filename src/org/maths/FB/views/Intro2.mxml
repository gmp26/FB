<?xml version="1.0" encoding="utf-8"?>
<views:AbstractLevel xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:components="org.maths.FB.components.*"
		xmlns:views="org.maths.FB.views.*"
		title="Introduction"
		>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
		<s:SolidColorStroke id="lineStroke" weight="2" color="0x888888"/>
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import org.maths.FB.components.Tick;
		]]>
	</fx:Script>
	
	<views:navigationContent>
		<s:Button id="_backButton" label="back" /> 
	</views:navigationContent>

	<views:actionContent>
		<s:Button id="_skipButton" label="skip" /> 
	</views:actionContent>
	
	<components:ScaledGroup width="100%" height="100%">
		
		<s:Group id="_content" width="100%" height="100%">
			<components:OGroup horizontalCenter="0" horizontalAlign="center" verticalAlign="middle" top="40" width="100%" gap="20">
		
				<s:VGroup x="50" y="60" gap="15">
					<s:HGroup id="rowHeader" gap="15" paddingLeft="5" verticalAlign="middle">
						<s:Label text="Ã—" textAlign="center" fontSize="60" width="96" />
					</s:HGroup>
					<s:HGroup gap="10" verticalAlign="top" paddingLeft="5">
						<s:VGroup id="columnHeader" gap="0" paddingTop="0"/>
						<views:GameTable id="table"/>
					</s:HGroup>
				</s:VGroup>
				
	<!--		
				<s:Line id="topLine" x="20" y="165" stroke="{lineStroke}" width="580"/>
				<s:Line id="sideLine" y="30" x="155" stroke="{lineStroke}" height="580"/>
	-->	
				<s:VGroup  horizontalAlign="center" width="40%" verticalAlign="middle" >
					<s:Label text="Reveal 2 to solve"/>
				</s:VGroup>
			</components:OGroup>
		</s:Group>
		
	</components:ScaledGroup>
	<s:Button id="_checkButton" label="check" bottom="-90" width="100%" chromeColor="0xCC8800"/>
	<s:Button id="_nextButton" label="Continue" icon="{Tick}" visible="false" fontSize="40" chromeColor="0" horizontalCenter="0" bottom="120"/>
	<s:Button id="_tryAgainButton" label="Try again!" visible="false" fontSize="40" chromeColor="0" horizontalCenter="0" bottom="120"/>
	
</views:AbstractLevel>
